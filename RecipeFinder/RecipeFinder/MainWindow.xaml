<Window x:Class="RecipeFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="538.5" Width="1377.5">
    <Grid>
        
        
        <Canvas HorizontalAlignment="Left" Height="465" Margin="10,10,0,0" VerticalAlignment="Top" Width="209">
            <Button x:Name="SearchButton" Content="Search" Canvas.Top="415" Width="209" Height="40" Click="SearchButton_Click"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="97" VerticalAlignment="Top" Width="209"/>
            <Canvas x:Name="Modes" Height="410" Width="209">
                <TextBox Height="18" TextWrapping="Wrap" Text="Modes" Width="209" Background="{x:Null}" BorderBrush="{x:Null}" Canvas.Top="10" TextAlignment="Center"/>
                <CheckBox Content="On-the-Go" Canvas.Left="10" Canvas.Top="33" Width="189"/>
                <CheckBox Content="Quick-and-Easy" Canvas.Left="10" Canvas.Top="53" Width="189"/>
                <CheckBox Content="Chef" Canvas.Left="10" Canvas.Top="73" Width="189"/>
                <Border BorderBrush="Black" BorderThickness="1" Height="304" Width="209" Canvas.Top="106">
                    <TextBox TextWrapping="Wrap" Text="Allergies" Margin="0,0,0,281" TextAlignment="Center" BorderBrush="{x:Null}"/>
                </Border>
                <StackPanel x:Name="Allergies" Height="265" Canvas.Left="10" Canvas.Top="135" Width="189"/>

            </Canvas>
        </Canvas>
        <Border x:Name="SearchPanel" BorderBrush="Black" BorderThickness="1" Height="455" Width="522" Margin="224,10,553,17">
            <Canvas HorizontalAlignment="Left" Height="435" Margin="9,9,0,0" VerticalAlignment="Top" Width="502">
                    <ScrollViewer Height="435" Width="502">
                        <StackPanel x:Name="SearchFilters"></StackPanel>
                    </ScrollViewer>
            </Canvas>
        </Border>
        <Border x:Name="ResultsPanel" BorderBrush="Black" BorderThickness="1" Height="455" Width="522" Margin="751,10,26,17">
            <Grid>
                <Grid Margin="0,10,361,10">
                    <StackPanel HorizontalAlignment="Left" Height="399" Margin="10,0,0,0" VerticalAlignment="Top" Width="139">
                        <TextBox Height="23" TextWrapping="Wrap" Text="RESULTS" TextAlignment="Center" BorderBrush="{x:Null}"/>
                        <ListBox x:Name="Results" Height="377" BorderBrush="{x:Null}" SelectionChanged="updateRecipeSelection"/>

                    </StackPanel>
                    <Button x:Name="Back" Content="Back" HorizontalAlignment="Left" Margin="10,404,0,0" VerticalAlignment="Top" Width="67" Height="29" Click="Back_Click"/>
                    <Button Content="Print" HorizontalAlignment="Left" Margin="82,404,0,0" VerticalAlignment="Top" Width="67" Height="29" Click="print"/>
                </Grid>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="433" Margin="164,10,0,0" VerticalAlignment="Top" Width="346">
                    <RichTextBox x:Name="RecipeDisplayed">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="Initialized to Empty"/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </Border>

            </Grid>
            
        </Border>

    </Grid>
</Window>
